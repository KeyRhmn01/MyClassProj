<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.login">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/logins"
            android:background="#FF9800"


            />

    <ImageView
        android:layout_width="@dimen/loginimage1"
        android:layout_height="@dimen/loginimage2"
        android:src="@drawable/ic_baseline_account_circle_24"
        android:layout_gravity="center"
        android:layout_margin="@dimen/loginimage3"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/loginmu"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="@dimen/loginus"
            />

        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/loginpm"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textSize="@dimen/loginps"

            />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/loginbm"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/loginbs1"
            android:text="Register"
            android:layout_margin="@dimen/loginbm1"
            android:layout_weight="1"
            android:background="#FF9800"
            android:textColor="#ffffff"
            />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/loginbs2"
            android:layout_weight="1"
            android:background="#FF9800"
            android:text="Login"
            android:textColor="#ffffff"
            android:textSize="@dimen/loginbm2"



            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/infoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF9800"
            android:textColor="#ffffff"
            android:text="Info"
            android:textSize="@dimen/loginbs3"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/loginbma3"
            android:layout_marginLeft="@dimen/loginbmb3"
            />

    </LinearLayout>





</LinearLayout>